{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "moduleSuffixes": [".js"],
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "build",
    "resolveJsonModule": true,
    
    // Disable strict type checking
    "strict": false,
    "noImplicitAny": false,
    
    // Skip type checking of all declaration files
    "skipLibCheck": true,
    
    // Allow JavaScript files
    "allowJs": true,
    "checkJs": false,
    
    // Important: Continue even in case of errors
    "noEmitOnError": false,
    
    // Skip type checking of default lib declaration files
    "skipDefaultLibCheck": true,
    
    // No declaration files
    "declaration": false,
    
    // Other relaxed options
    "removeComments": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    
    // Disable verbatim module syntax
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*"]
}
